.chooseBox {
  width: 100%;
  height: 235rpx;
  background-color: #fff;
  position: fixed;
  bottom: -235rpx;
  left: 0;
  padding: 0 30rpx;
  transition-duration: 300ms;
  box-shadow:0rpx 6rpx 9rpx 8rpx rgba(74,74,74,0.16);
}

.chooseBox .scbox {
  height: 235rpx;
  /* display: flex; */
  white-space: nowrap;
}
.chooseBox .scbox .scItem{
  width: 160rpx;
  height: 100%;
  padding: 40rpx 0 0 24rpx;
  display: inline-block;
}

.chooseBox .scbox .scItem > view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.chooseBox .scbox .scItem > view .imgBox {
  width: 112rpx;
  height: 112rpx;
  position: relative;
}

.chooseBox .scbox .scItem > view .imgBox > image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.chooseBox .scbox .scItem.active > view .imgBox > image {
  animation: s 10s linear infinite;
}
@keyframes s {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.musicName {
  width: 112rpx;
  text-align: center;
  color: #333;
  height: 50rpx
}

.chooseBox .scbox .scItem.active .musicName {
  color: #1790D7;
  position: relative;
  overflow: hidden;
}


.chooseBox .scbox .scItem.active .musicName.move text {
  position: absolute;
  top: 8rpx;
  animation: textMove 5s linear infinite;
}
@keyframes textMove {
  0% {
    left: 100%;
  }
  100% {
    left: -100%;
  }
}

.choosed {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  left: 0;
  top: 0;
