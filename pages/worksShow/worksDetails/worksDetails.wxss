/* 评论框 */
.pc {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.6);
  /* display: none; */
  z-index: 9999;
  left: 0;
  top: 0;
}

.pc .pc-content {
  width: 658rpx;
  height: 460rpx;
  background-color: white;
  border-radius: 10rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: 200rpx auto;
  z-index: 9999;
}

.pc .pc-content .pc-top {
  width: 100%;
  height: auto;
  text-align: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.pc .pc-content .pc-top span {
  text-align: center;
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  color: #333333;
  line-height:120rpx;
}

.pc .pc-content .pc-top textarea {
 
  width: 100%;
  height: 160rpx;
  border: 1px solid #ccc;
  text-align: left;
  box-sizing: border-box;
  font-size:26rpx;
  line-height: 40rpx;
  border-radius: 6rpx;
  padding: 15rpx 0 0 15rpx;
}

.pc .pc-content .pc-top p {
  display: inline-block;
  width: 100%;
  height: auto;
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  line-height: 30rpx;
}

.pc .pc-content .pc-bottom {
  width: 100%;
  height: 88rpx;
  border-top: 1px solid #e9e9e9;
  margin-top: 40rpx;
  display: flex;
  text-align: center;
}

.pc .pc-content .pc-bottom span {
  display: inline-block;
  width: 100%;
  font-size: 30rpx;
  line-height: 80rpx;
}

.pc .pc-content .pc-bottom .pc-bottom-left {
  flex: 1;
  border-right: 1px solid #e9e9e9;
}

.pc .pc-content .pc-bottom .pc-bottom-right {
  flex: 1;
}

.pc .pc-content .pc-bottom .pc-bottom-right span {
  color: #1790d7;
}

.pc .pc-content .pc-delect {
  width: 22rpx;
  height: 22rpx;
  position: absolute;
  padding:30rpx;
  right: 0rpx;
  top:0rpx;
  cursor:pointer;

}

.pc .pc-content .pc-delect image {
  float: left;
  width: 100%;
  height: 100%;
}

.pc.active {
  display: block;
}

.header {
  width: 100%;
  position: relative;
  height: 500rpx;
  overflow: hidden;
}

.header > image {
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.header > .logo {
  width: 124rpx;
  position: absolute;
  top: 26rpx;
  left: 23rpx;
}

.header > .logos {
  position: absolute;
  top: 26rpx;
  left: 23rpx;
  display: flex;
  align-items: center;
}

.header > .logos > image {
  width: 52rpx;
}

.header > .logos > view {
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.header > .logos > view text{
  color: #fff;
  font-size: 16rpx;
  line-height: 20rpx;
  text-shadow: 2rpx 2rpx 2rpx rgba(0,0,0,.4);
}

.header > .logos > view text:nth-child(1){
  font-size: 20rpx;
  letter-spacing: 5rpx;
}

.header .musicIcon {
  width:60rpx;
  height:60rpx;
  background:rgba(0,0,0,.4);
  border-radius:50%;
  position: absolute;
  top: 24rpx;
  right: 30rpx;
  overflow: hidden;
}
.musicIcon.no::after {
  content: '.';
  width: 100%;
  height: 1px;
  background-color: rgba(255,255,255,.7);
  position: absolute;
  display: block;
  top: 50%;
  left: 0;
  transform: rotate(-45deg);
}

.header .musicIcon image {
  width: 36rpx;
  height: 36rpx;
  margin: 12rpx 0 0 12rpx;
}

