/* pages/activity/matchVideo/matchVideo.wxss */
@import"../../template/imgList.wxss";
page {
  background-color: #2c2b3d;
}
.main {
  width: 100%;
}

.main > view {
  width: 100%;
  position: relative;
}

.main > view > image {
  width: 100%;
  display: block;
}

.button {
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 45rpx;
  color: #fff;
  font-weight: 600;
  text-align: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 400rpx;
  border-radius: 40rpx;
  background: linear-gradient(to right,#36d0ff, #df39f5);
}

.b2 {
  display: flex;
  position: absolute;
  left: 40rpx;
  top: 650rpx;
}

.b2 > view {
  font-size: 30rpx;
  color: #fff;
  padding-bottom: 15rpx;
  margin-right: 40rpx;
}

.b2 > view.active {
  color: #dd3cfa;
  border-bottom: 1px solid #dd3cfa;
}

.rightBox {
  position: fixed;
  width: 100rpx;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  background-color: #df3af6;
  box-sizing: border-box;
  padding: 0 16rpx;
}

.rightBox > view {
  font-size: 25rpx;
  color: #fff;
  text-align: center;
  padding: 20rpx 0;
  line-height: 30rpx;
}
.rightBox > view + view {
  border-top: 1px solid #fff;
}

.rightBox image {
  width: 60%;
  display: block;
  margin: 0 auto 10rpx;
}

.videoBox {
  width: 520rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 150rpx;
}

.videoBox video {
  width: 100%;
  height: 380rpx;
}