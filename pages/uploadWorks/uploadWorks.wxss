@import "../../icon/iconfont.wxss";
page {
  background-color: #eee;
}
view, text, textarea {
  box-sizing: border-box;
}
.header {
  width: 100%;
  padding: 50rpx 0 30rpx;
}
.header input, .header textarea {
  width: 100%;
  background-color: #fff;
  padding: 30rpx 40rpx;
  font-size: 30rpx;
  color: #333;
  
}
.header .title {
  width: 670rpx;
}
::placeholder {
  font-size: 30rpx;
  color: #999;
}

.header textarea {
  margin-top: 30rpx;
  height: 200rpx;
  /* height: auto; */
}

.list {
  width: 100%;
}
.list .item {
  width: 100%;
  padding: 35rpx 30rpx 15rpx;
  background-color: #fff;
  font-size: 30rpx;
  color: #333;
  display: flex;
  margin-bottom: 30rpx;
  position: relative
}

.list .item .xh {
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  top: 0;
  right: 0;
  text-align: center;
  line-height: 32rpx;
  width: 46rpx;
  height: 32rpx;
  background-color: #ccc;
}

.list .item .imgBox {
  width: 185rpx;
  height: 185rpx;
  position: relative;
}
.list .item .imgBox image{
  width: 100%;
  height: 100%;
}
.list .item .imgBox .sc {
  width: 56rpx;
  height: 56rpx;
  padding: 10rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.list .item .imgBox .sc view{
  background-color: #F34755;
  color: #fff;
  font-size: 28rpx;
  width: 36rpx;
  height: 36rpx;
  text-align: center;
  line-height: 36rpx;
  font-weight: 600;
  border-radius: 50%;
}

.list .item .imgBox .addImg {
  width: 100%;
  height: 100%;
  background-color: #ccc;
  font-size: 80rpx;
  color: #fff;
  text-align: center;
  line-height: 185rpx;
}

.list .item .right {
  padding-left: 30rpx;
  flex-grow: 1;
}

.list .item .right textarea{
  width: 100%;
  min-height: 120rpx;
  margin-bottom: 10rpx;
}
.list .item .right > view{
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.list .item .right > view > view {
  padding: 20rpx 25rpx;
  margin-left: 5rpx;
}

.list .item .right > view > view .botton {
  font-size: 30rpx;
  color: #fff;
  background-color: #666666;
  width: 46rpx;
  height: 46rpx;
  text-align: center;
  line-height: 46rpx;
  border-radius: 50%;
}

.list .bottom {
  width: 100%;
  padding-top: 30rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  position: relative;
}
.list .bottom .addItem {
  width: 70rpx;
  height: 70rpx;
  border: 3rpx solid rgba(221,221,221,1);
  border-radius:50%;
  color: #999;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  line-height: 67rpx;
}

.list .bottom .bb {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  padding: 30rpx 20rpx 50rpx 0;
}

.list .bottom .bb view {
  font-size: 36rpx;
  color: #fff;
  padding: 0 40rpx;
  background-color: #1790D7;
  border-radius: 35rpx;
  height: 70rpx;
  line-height: 70rpx;
}

.list .bottom .tis {
  padding: 0rpx 30rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%) scale(0);
  top: 120rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0rpx 0rpx 15rpx 8rpx rgba(74,74,74,0.1);
  animation: showtt .5s linear forwards 1s;
}
@keyframes showtt {
  0% {
    transform: translateX(-50%) scale(0);
  }
  100% {
    transform: translateX(-50%) scale(1);
  }
}

.list .bottom .tis text {
  color: #999;
  font-size: 30rpx;
  line-height: 80rpx;
}

.list .bottom .tis i {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: -20rpx;
  width: 20rpx;
  height: 26rpx;
  /* background-color: #fff; */
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 20rpx solid #fff;
  box-sizing: border-box;
}

tips {
  z-index: 9999;
}