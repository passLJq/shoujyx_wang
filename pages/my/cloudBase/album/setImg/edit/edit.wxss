.line{
  height: 20rpx;
  width:100%;
  background-color: #f5f5f5;
}
.edit{
  display: flex;
  flex-direction: column;
  width: 92%;
  margin:30rpx auto;
}
.edit-title{
  width: 100%;
  height: 90rpx;
  clear: both;
 
  float: left;
  flex-direction: row;
}
.edit-title text{
  line-height:90rpx;
  font-size: 28rpx;
  color: #333;
   float: left;
}
.edit-title-input{
  margin-left: 30rpx;
  border-bottom: 1rpx solid #e9e9e9;
  font-size: 28rpx;
  width: 535rpx;
  color: #333;
  float: left;
  padding-left: 15rpx;
  height: 90rpx;
}
.edit-category{
  float: left;
  flex-direction: row;
   margin-left: 30rpx;
   border-bottom: 1rpx solid #e9e9e9;
  font-size: 28rpx;
  width: 535rpx;
  padding-left: 15rpx;
  line-height: 90rpx;
 
}
.edit-category text{
  width: 500rpx;
  float: left;
  height: 90rpx;
}
.edit-category image{
  float: right;
  height: 24rpx;
  width: 14rpx;
  margin: 34rpx 20rpx 0 0;
}
.edit-desc{
  display: flex;
  flex-direction: row;
  width: 100%;
  
  margin-top: 30rpx;
}
.edit-desc text{
  font-size: 28rpx;
  color: #333;
  margin-top: 15rpx;
}
.edit-desc textarea{
  width: 530rpx;
  height: 200rpx;
  border: 1rpx solid #e9e9e9;
  margin-left: 34rpx;
  font-size:28rpx;
  padding:15rpx 0 0 15rpx;
  color: #333;
  line-height: 38rpx;
}
.radio-group{
  margin-top: 40rpx;
  font-size: 26rpx;
  margin-left: 140rpx;
}
.gongk{
  margin-left: 20rpx;
}
.button{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}

.save{
  height: 80rpx;
  width: 40%;
  background-color:#1790d7;  
  margin:40rpx auto;
  border-radius: 8rpx;
  text-align: center;
  font-size:30rpx;
  line-height: 80rpx;
  color: #fff;
}
.cancel{
  height: 80rpx;
  width: 40%;
  background-color:#f5f5f5; 
  border: 1px solid #e9e9e9; 
  margin:40rpx auto;
  border-radius: 8rpx;
  text-align: center;
  font-size:30rpx;
  line-height: 80rpx;
  color: #666;
}

/* 遮罩层 */
.b1{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;background:rgba(0,0,0,0.4);
  overflow: hidden;
  z-index: 100;
}
.b2{
  display: flex;
  flex-direction:column;
  width: 87.7333%; 
  margin:35% auto;
  overflow: hidden;
  background-color: #fff;
  border-radius: 20rpx;
}

.category{
  height: 88rpx;
  width: 88%;
  border-bottom:1px #e9e9e9 solid; 
  margin:0 auto;
  text-align: center;
  font-size:30rpx;
  line-height:88rpx;
  color: #333;
}
