.verify{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;background:rgba(0,0,0,0.4);
  z-index: 100;
  overflow: hidden;
}
.verify-a{
  display: flex;
  flex-direction:column;
  width: 87.7333%; 
  margin:35% auto;
  overflow: hidden;
  background-color: #fff;
  border-radius: 20rpx;
}


.mobile_phone{ font-size:30rpx; text-align: center; width: 100%; margin:50rpx 0; color: #333;}

.content{
  display: flex;
  flex-direction: column;
  padding-bottom: 30rpx;
  
  width: 88%;
  
  margin:0 auto;
  font-size:30rpx;

  color: #333;
}
.phone{
  width: 100%;
  float: left;
  flex-direction: row;
  font-size: 26rpx;
  margin-bottom:30rpx;
 
}
.phone text{line-height: 68rpx; float: left; width:120rpx;}
.verify-sj{
  border: 1rpx solid #ccc;
